-title = '商品画像管理'
h1 = title

.table-wrapper
  .links
    = link_to '新規登録', :new_admin_product_product_image
  table.listing
    tr
      th タイトル
      th 画像ファイル
      th 画像
      th アクション
      - @product.product_images.each do |m|
        tr
          td = m.title
          td = m.image_name
          td = image_tag m.image.thumb('400x200#').url if m.image_stored?
          td.actions
            = link_to '編集', [ :edit, :admin, m ]
            span  | 
            = link_to '削除', [ :admin, m ], method: :delete, data: { confirm: '本当に削除しますか？' }
  .links
    = link_to '新規登録', :new_admin_product_product_image